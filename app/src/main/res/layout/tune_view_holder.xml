<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/linear_layout_view_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_artistName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARTIST NAME :"
            android:labelFor="@+id/text_view_artistName"/>

        <TextView
            android:id="@+id/text_view_artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="artist name"/>


        <TextView
            android:id="@+id/text_view_track_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRACK NAME :"
            android:labelFor="@+id/text_view_track_name"/>

        <TextView
            android:id="@+id/text_view_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="track name"/>

    </LinearLayout>

</RelativeLayout>